<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
{#    <link rel="stylesheet" href="{{asset('node_modules/bootstrap/dist/css/bootstrap.css')}}">#}
    <title>Se Connecter</title>
</head>
<body>
<h2>Bienvenu sur FlexStage</h2>
<div class="container" id="container">
    <div class="form-container sign-in-container">
        <form action="{{ path('app_register') }}" method="post">
            {% for message in app.session.flashBag.get('danger')%}
                <span> {{ message }} </span>
            {%endfor%}
                        <h1>Se connecter</h1>
                            <br>
                        <input type="email"  placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <br>
                        <input type="password"  placeholder="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        {% for message in app.session.flashBag.get('danger') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <a href="#">Mot de passe Oublié?</a>
                        <button type="submit" value="Sign In" name="submit">Se Connecter</button>
                    </form>
    </div>
    <div class="form-container sign-up-container">

        {% for message in app.session.flashBag.get('danger')%}
            <span> {{ message }} </span>
        {%endfor%}
        <form action="{{path('app_registe')}}">
        {{ form_start(registrationForm) }}
        <h1>S'Inscrire</h1>
        <br>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword)}}
        {{ form_row(registrationForm.agreeTerms) }}
        <br>
        {#<a href="{{path('app_registe')}}">#}<button type="submit" value="Sign Up" name="submit">S'inscrire</button>{#</a>#}
        {{ form_end(registrationForm)}}</form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Bienvenue !</h1>
                <p>Pour rester en contact avec nous, veuillez vous connecter avec vos informations personnelles.</p>
                <button class="ghost" id="signIn">Se Connecter</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Bonjour l'ami!</h1>
                <p>Entrez vos données personnelles et commencez votre voyage avec nous</p>
                <button class="ghost" id="signUp">S'inscrire</button>
            </div>
        </div>
    </div>
</div>
</body>
{%block javascripts %}
    <script src="{{asset('js/mouve.js')}}"></script>
{%endblock%}
</html>


